---
import UseCaseLayout from '../../layouts/UseCaseLayout.astro'
import Terminal from '../../components/Terminal.astro'

const painPoints = [
  {
    problem: 'Spending hours on manual audits',
    solution: 'Automated scans in seconds, run on every PR'
  },
  {
    problem: 'No data on which teams are adopting',
    solution: 'Per-directory adoption metrics and trends'
  },
  {
    problem: 'Can\'t prove ROI of design system investment',
    solution: 'Real numbers: adoption %, drift reduction over time'
  },
  {
    problem: '"We think we have 60% adoption" isn\'t good enough',
    solution: 'Know exactly: 47% component coverage, 63% token coverage'
  },
]

const metrics = [
  { label: 'Component Coverage', value: '47%', change: '+12% this month' },
  { label: 'Token Adoption', value: '63%', change: '+8% this month' },
  { label: 'Drift Signals', value: '23', change: '-15 from last week' },
  { label: 'Teams Onboarded', value: '4/6', change: '+1 this sprint' },
]

const terminalLines = [
  { text: '', delay: 600 },
  { text: '<span class="text-light font-semibold">Design System Coverage</span>', type: 'output', delay: 800 },
  { text: '‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê', type: 'muted', delay: 1000 },
  { text: '', delay: 1200 },
  { text: 'Components: <span class="text-warning">47%</span> ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë', type: 'output', delay: 1400 },
  { text: 'Tokens:     <span class="text-success">63%</span> ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë', type: 'output', delay: 1600 },
  { text: 'Overall:    <span class="text-warning">52%</span> ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë', type: 'output', delay: 1800 },
  { text: '', delay: 2000 },
  { text: '<span class="text-slate">By Source:</span>', type: 'output', delay: 2200 },
  { text: '‚îú‚îÄ src/components/    <span class="text-success">78%</span> ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñë', type: 'output', delay: 2400 },
  { text: '‚îú‚îÄ src/features/      <span class="text-warning">34%</span> ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë', type: 'warning', delay: 2600 },
  { text: '‚îî‚îÄ src/pages/         <span class="text-critical">23%</span> ‚ñà‚ñà‚ñà‚ñà‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë‚ñë', type: 'critical', delay: 2800 },
