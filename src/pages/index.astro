          </Button>
        </div>

        <!-- Quick install command -->
        <div class="inline-flex items-center gap-3 px-4 py-3 bg-navy/80 border border-navy-light/30 rounded-lg font-mono text-sm backdrop-blur-sm copy-command" data-command="npx @buoy-design/cli begin">
