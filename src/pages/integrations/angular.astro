---
import IntegrationLayout from '../../layouts/IntegrationLayout.astro'
import Terminal from '../../components/Terminal.astro'

const features = [
  {
    title: 'Component Templates',
    description: 'Scans inline and external HTML templates for hardcoded styles and classes.'
  },
  {
    title: 'Component Styles',
    description: 'Analyzes component stylesheets including :host selectors and encapsulated CSS.'
  },
  {
    title: 'Input/Output Detection',
    description: 'Extracts @Input() and @Output() decorators for prop consistency analysis.'
  },
  {
    title: 'Standalone Components',
    description: 'Full support for Angular 14+ standalone components and signals.'
  },
  {
    title: 'NgModule Analysis',
    description: 'Tracks component declarations and imports across modules.'
  },
  {
    title: 'Angular Material',
    description: 'Detects Angular Material theme overrides and custom styling.'
  },
]

const terminalLines = [
  { text: '', delay: 600 },
  { text: '<span class="text-buoy">âš“</span> Scanning Angular components...', type: 'output', delay: 800 },
  { text: '', delay: 1200 },
  { text: 'Found <span class="text-light">78</span> Angular components', type: 'output', delay: 1400 },
  { text: 'Found <span class="text-light">8</span> NgModules', type: 'output', delay: 1600 },
  { text: '', delay: 1800 },
  { text: '<span class="text-warning">WARNING</span> 19 hardcoded values in component styles', type: 'warning', delay: 2000 },
  { text: '<span class="text-warning">WARNING</span> 4 Angular Material theme overrides', type: 'warning', delay: 2200 },
  { text: '<span class="text-info">INFO</span> 7 @Input type inconsistencies', type: 'info', delay: 2400 },
]

const configExample = `// buoy.config.mjs
export default {
  framework: 'angular',

  include: [
    'src/app/**/*.component.ts',
    'src/app/**/*.component.html',
    'src/app/**/*.component.scss',
  ],

  // Angular-specific options
  angular: {
    standalone: true,
    materialTheme: './src/styles/theme.scss',
  },

  tokens: './src/styles/tokens.scss',
}`
---

<IntegrationLayout
  title="Angular Component Drift Detection | Buoy"
  description="Scan Angular components for design drift. Detect hardcoded styles in component templates and stylesheets."
  keywords="angular design system, angular component audit, angular code consistency"
  heroTitle="Angular Component Drift Detection"
  heroDescription="Scan Angular components for design drift. Analyze templates, component styles, and Angular Material theme usage."
  icon="ðŸ”º"
  iconBg="bg-red-500/20"
>
  <!-- Features Grid -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-light mb-8 text-center">Angular-Specific Features</h2>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {features.map((feature) => (
          <div class="bg-navy/50 border border-navy-light/20 rounded-xl p-6">
            <h3 class="font-semibold text-light mb-2">{feature.title}</h3>
            <p class="text-sm text-slate">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Terminal Demo -->
  <section class="py-16 bg-navy">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-light mb-8 text-center">See it in action</h2>
      <Terminal command="buoy check --framework angular" lines={terminalLines} />
    </div>
  </section>

  <!-- Configuration -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-light mb-8 text-center">Configuration Example</h2>

      <div class="bg-navy border border-navy-light/30 rounded-xl overflow-hidden">
        <div class="px-4 py-3 bg-navy-dark border-b border-navy-light/20">
          <span class="text-sm text-slate font-mono">buoy.config.mjs</span>
        </div>
        <pre class="p-4 text-sm font-mono overflow-x-auto"><code class="text-slate">{configExample}</code></pre>
      </div>
    </div>
  </section>
</IntegrationLayout>
