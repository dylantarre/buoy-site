---
import IntegrationLayout from '../../layouts/IntegrationLayout.astro'
import Terminal from '../../components/Terminal.astro'

const features = [
  {
    title: 'SFC Parsing',
    description: 'Full support for Vue Single File Components - template, script, and style blocks.'
  },
  {
    title: 'Composition API',
    description: 'Understands Vue 3 Composition API, setup scripts, and composables.'
  },
  {
    title: 'Scoped Styles',
    description: 'Scans scoped and module CSS for hardcoded values and design token usage.'
  },
  {
    title: 'Props & Emits',
    description: 'Extracts defineProps, defineEmits, and validates prop consistency across components.'
  },
  {
    title: 'Template Analysis',
    description: 'Detects inline styles, class bindings, and dynamic style expressions in templates.'
  },
  {
    title: 'Nuxt Support',
    description: 'Works with Nuxt projects including auto-imports and component directories.'
  },
]

const terminalLines = [
  { text: '', delay: 600 },
  { text: '<span class="text-buoy">âš“</span> Scanning Vue components...', type: 'output', delay: 800 },
  { text: '', delay: 1200 },
  { text: 'Found <span class="text-light">67</span> Vue SFCs', type: 'output', delay: 1400 },
  { text: 'Found <span class="text-light">23</span> composables', type: 'output', delay: 1600 },
  { text: '', delay: 1800 },
  { text: '<span class="text-warning">WARNING</span> 15 hardcoded values in &lt;style&gt; blocks', type: 'warning', delay: 2000 },
  { text: '<span class="text-warning">WARNING</span> 3 duplicate component implementations', type: 'warning', delay: 2200 },
  { text: '<span class="text-info">INFO</span> 6 prop type inconsistencies', type: 'info', delay: 2400 },
]

const configExample = `// buoy.config.mjs
export default {
  framework: 'vue',

  include: [
    'src/components/**/*.vue',
    'src/composables/**/*.ts',
  ],

  // Vue-specific options
  vue: {
    version: 3,
    scriptSetup: true,
  },

  tokens: './src/assets/tokens.css',
}`
---

<IntegrationLayout
  title="Vue Component Drift Detection | Buoy"
  description="Scan Vue SFC files for design drift. Detect hardcoded styles in template, script, and style blocks."
  keywords="vue design system, vue component audit, vue code consistency"
  heroTitle="Vue Component Drift Detection"
  heroDescription="Scan Vue Single File Components for design drift. Detect hardcoded styles in template, script, and style blocks. Works with Vue 2, Vue 3, and Nuxt."
  icon="ðŸ’š"
  iconBg="bg-emerald-500/20"
>
  <!-- Features Grid -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-light mb-8 text-center">Vue-Specific Features</h2>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {features.map((feature) => (
          <div class="bg-navy/50 border border-navy-light/20 rounded-xl p-6">
            <h3 class="font-semibold text-light mb-2">{feature.title}</h3>
            <p class="text-sm text-slate">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Terminal Demo -->
  <section class="py-16 bg-navy">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-light mb-8 text-center">See it in action</h2>
      <Terminal command="buoy check --framework vue" lines={terminalLines} />
    </div>
  </section>

  <!-- Configuration -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-light mb-8 text-center">Configuration Example</h2>

      <div class="bg-navy border border-navy-light/30 rounded-xl overflow-hidden">
        <div class="px-4 py-3 bg-navy-dark border-b border-navy-light/20">
          <span class="text-sm text-slate font-mono">buoy.config.mjs</span>
        </div>
        <pre class="p-4 text-sm font-mono overflow-x-auto"><code class="text-slate">{configExample}</code></pre>
      </div>
    </div>
  </section>
</IntegrationLayout>
