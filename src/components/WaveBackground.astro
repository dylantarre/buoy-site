---
// Smooth wave background with layered depth
---

<div class="wave-background">
  <!-- Wave Layers - stacked with depth -->
  <div class="waves-container">
    <!-- Back wave - deepest layer -->
    <div class="wave wave-back">
      <svg viewBox="0 0 1440 320" preserveAspectRatio="none" class="wave-svg">
        <path
          class="wave-path"
          d="M0,160
             C120,200 240,120 360,160
             C480,200 600,120 720,160
             C840,200 960,120 1080,160
             C1200,200 1320,120 1440,160
             L1440,320 L0,320 Z"
        />
      </svg>
    </div>

    <!-- Middle wave -->
    <div class="wave wave-middle">
      <svg viewBox="0 0 1440 320" preserveAspectRatio="none" class="wave-svg">
        <path
          class="wave-path"
          d="M0,192
             C144,240 288,144 432,192
             C576,240 720,144 864,192
             C1008,240 1152,144 1296,192
             C1368,216 1404,180 1440,192
             L1440,320 L0,320 Z"
        />
      </svg>
    </div>

    <!-- Front wave - closest layer -->
    <div class="wave wave-front">
      <svg viewBox="0 0 1440 320" preserveAspectRatio="none" class="wave-svg">
        <path
          class="wave-path"
          d="M0,224
             C180,280 360,168 540,224
             C720,280 900,168 1080,224
             C1260,280 1350,200 1440,224
             L1440,320 L0,320 Z"
        />
      </svg>
    </div>
  </div>

  <!-- Subtle grain overlay -->
  <div class="grain-overlay"></div>
</div>

<style>
  .wave-background {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: 0;
    background: linear-gradient(
      180deg,
      #0a1628 0%,
      #0d1f35 50%,
      #0a1628 100%
    );
  }

  .waves-container {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50%;
    min-height: 200px;
  }

  .wave {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 200%;
    height: 100%;
  }

  .wave-svg {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 50%;
    height: 100%;
  }

  /* Back wave - blue tones */
  .wave-back {
    z-index: 1;
    opacity: 0.7;
    animation: waveFlow 25s linear infinite;
  }

  .wave-back .wave-path {
    fill: rgba(30, 58, 95, 0.8);
  }

  /* Middle wave - purple tones */
  .wave-middle {
    z-index: 2;
    opacity: 0.8;
    animation: waveFlow 20s linear infinite;
    animation-delay: -5s;
  }

  .wave-middle .wave-path {
    fill: rgba(45, 55, 85, 0.85);
  }

  /* Front wave - darkest, most visible */
  .wave-front {
    z-index: 3;
    opacity: 0.9;
    animation: waveFlow 15s linear infinite;
    animation-delay: -10s;
  }

  .wave-front .wave-path {
    fill: rgba(20, 40, 70, 0.9);
  }

  /* Smooth horizontal wave motion */
  @keyframes waveFlow {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Subtle grain texture */
  .grain-overlay {
    position: absolute;
    inset: 0;
    pointer-events: none;
    opacity: 0.04;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='grain'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23grain)'/%3E%3C/svg%3E");
  }

  /* Responsive */
  @media (max-width: 768px) {
    .waves-container {
      height: 40%;
    }
  }
</style>
