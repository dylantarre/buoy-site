        <path d="M0,400 C150,350 350,450 500,400 C650,350 850,450 1000,400 C1150,350 1350,450 1440,400 L1440,800 L0,800 Z"/>
      </clipPath>
      <!-- Drop shadow filters for wave depth -->
      <filter id="waveShadow0" x="-20%" y="-20%" width="140%" height="140%">
        <feDropShadow dx="0" dy="-14" stdDeviation="10" flood-color="rgba(0,0,0,0.4)"/>
